# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://[user]:[password]@[host]:[port]/[database]?schema=[schema]
# Example: postgresql://myuser:mypassword@localhost:5432/mydb?schema=public
DATABASE_URL="postgresql://user:password@localhost:5432/ieee_db?schema=public"

# =============================================================================
# JWT (JSON WEB TOKEN) CONFIGURATION
# =============================================================================
# Secret key used to sign JWT tokens - MUST be changed in production!
# Generate a strong random string (at least 32 characters)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Token expiration time
# Examples: "1h" (1 hour), "7d" (7 days), "30m" (30 minutes)
JWT_EXPIRATION="7d"

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Port where the application will run
PORT=3000

# Node environment: development, production, test
NODE_ENV="development"

# =============================================================================
# EMAIL CONFIGURATION (SMTP)
# =============================================================================
# SMTP server host (e.g., Gmail: smtp.gmail.com, Outlook: smtp-mail.outlook.com)
MAIL_HOST="smtp.gmail.com"

# SMTP port (587 for TLS, 465 for SSL, 25 for unsecured)
MAIL_PORT=587

# Email account username (usually your email address)
MAIL_USER="your-email@example.com"

# Email account password or app-specific password
# For Gmail: Create an app password at https://myaccount.google.com/apppasswords
MAIL_PASSWORD="your-email-password"

# Display name and email address that appears in "From" field
MAIL_FROM="IEEE <noreply@ieee.org>"

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Maximum file size in bytes (default: 5MB = 5242880 bytes)
# 1MB = 1048576 bytes, 10MB = 10485760 bytes
MAX_FILE_SIZE=5242880

# Directory where uploaded files will be stored (relative to project root)
UPLOAD_DEST="./uploads"

# =============================================================================
# CORS (Cross-Origin Resource Sharing)
# =============================================================================
# Allowed origins for CORS requests
# Use "*" to allow all origins (NOT recommended for production)
# For multiple origins, separate with commas: "http://localhost:3000,http://localhost:3001"
CORS_ORIGIN="http://localhost:3001"

# =============================================================================
# RATE LIMITING
# =============================================================================
# Time to live in seconds (how long to remember requests)
# Default: 60 seconds
THROTTLE_TTL=60

# Maximum number of requests within TTL period
# Default: 10 requests per minute
THROTTLE_LIMIT=10

# =============================================================================
# IEEE MEMBERSHIP VERIFICATION
# =============================================================================
# Enable/disable IEEE membership verification
# Set to "true" to require valid IEEE membership numbers
# Set to "false" to skip verification (useful for development/testing)
IEEE_VERIFICATION_ENABLED=true
